    </nav>
   
</header>
<div class="shirts">

    <h1 style="text-align: center; font-size:4rem; color: black;">Kustom Graphic Shirts</h1> 
    
<div class="column">

        <ul class="container"
            style="
                margin: auto;
                font-size:large; 
                display: flex; width: 90%;
                flex-wrap: wrap;
                justify-content: center;"
        >
        <% product.forEach(p => { %>
            <li style="display: flex; 
                        flex-direction: column; 
                        justify-content: center; 
                        align-items: center; margin: 15px"
            >
            <a>
                <img src="<%= p.img %>" alt="" width="350" height="350"
                        style="border-radius: 25%;" >
            </a>
                <a href="/product/<%= p._id%>">
                    <%= p.name %>
                </a>
            </li>
    <% }); %> 
    </ul>

</div>

